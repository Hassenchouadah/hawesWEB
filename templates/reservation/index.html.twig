{% extends 'baseBack.html.twig' %}

{% block title %}Liste des Reservations{% endblock %}

{% block body %}
    <h1>Liste des Réservations</h1>
    <h3>
        <a href="{{ path('app_reservation_index', {'etat': -1}) }}">Annulés</a> 
        <a href="{{ path('app_reservation_index', {'etat': 1}) }}">Confirmés</a>
        <a href="{{ path('app_reservation_index', {'etat': 0}) }}">Attente</a>
        <a href="{{ path('app_reservation_index', {'etat': 99}) }}">Archive</a>
    </h3>
    <table class="table">
        <thead>
            <tr>
                <th>Client</th>
                <th>Hebergement</th>
                <th>Idres</th>
                <th>Idvol</th>
                <th>Valide</th>
                <th>Nbpersonne</th>
                <th>Forfait</th>
                <th>Nbchambre</th>
                <th>Nbsuite</th>
                <th>Datearr</th>
                <th>Datedep</th>
                <th>Dateres</th>
                <th>Deadlineannulation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.iduser }}</td>
                <td>{{ reservation.idhebr }}</td>
                <td>{{ reservation.idres }}</td>
                <td>{{ reservation.idvol }}</td>
                <td>{{ reservation.valide }}</td>
                <td>{{ reservation.nbpersonne }}</td>
                <td>{{ reservation.forfait }}</td>
                <td>{{ reservation.nbchambre }}</td>
                <td>{{ reservation.nbsuite }}</td>
                <td>{{ reservation.datearr ? reservation.datearr|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.datedep ? reservation.datedep|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.dateres ? reservation.dateres|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.deadlineannulation ? reservation.deadlineannulation|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'idres': reservation.idres}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'idres': reservation.idres}) }}">edit</a>
                    <a href="{{ path('app_reservation_validate', {'idres': reservation.idres}) }}">validate</a>
                    <a href="{{ path('app_reservation_cancel', {'idres': reservation.idres}) }}">cancel</a>
                    <a href="{{ path('app_reservation_smail', {'idres': reservation.idres}) }}">send mail</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Liste vide.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Create new</a>
{% endblock %}
