{% extends 'baseFront.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}

<section id="breadcrumb" class="breadcrumb-section position-relative"
         data-background="{{ asset('assets/uploads/2021/12/banner.jpg') }}"
         style="background-image: url('{{ asset('assets/uploads/2021/12/banner.jpg') }}');">
    <span class="breadcrumb-overlay position-absolute"></span>
    <div class="container">
        <div class="breadcrumb-content text-center headline">
            <h2>Register</h2>
            <div class="breadcrumb-item ul-li">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>


                    <li class="breadcrumb-item active">Register</li>
                </ul>
            </div>
        </div>
    </div>
</section>

    <section class="signup-area">
        <div class="container">
            <div class="row">
                <div class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-8 offset-lg-2">
                    <div class="sign-wrapper white-bg">
                        <div class="sign-form">
                            {{ form_start(userform, {'attr': {'novalidate': 'novalidate'}} )}}

                            <div class="sign-input-wrapper">
                                <h5>CIN</h5>
                                <div class="sign-input">
                                    {{ form_widget(userform.cin, { 'attr' : { 'placeholder' : 'Please enter a valid cin' } }) }}
                                    {{ form_errors(userform.cin) }}
                                    <i class="fa fa-id-card"></i>
                                </div>
                            </div>
                            <div class="sign-input-wrapper">
                                <h5>Nom</h5>
                                <div class="sign-input">
                                    {{ form_widget(userform.nomUser, { 'attr' : { 'placeholder' : 'Please enter a valid nom' } }) }}
                                    <i class="fa fa-user"></i>
                                </div>
                            </div>
                            <div class="sign-input-wrapper">
                                <h5>Prenom</h5>
                                <div class="sign-input">
                                    {{ form_widget(userform.prenomUser, { 'attr' : { 'placeholder' : 'Please enter a valid nom' } }) }}
                                    <i class="fa fa-user"></i>
                                </div>
                            </div>
                            <div class="sign-input-wrapper">
                                <h5>Telephone</h5>
                                <div class="sign-input">
                                    {{ form_widget(userform.telUser, { 'attr' : { 'placeholder' : 'Please enter a valid tel' } }) }}
                                    <i class="fa fa-phone"></i>
                                </div>
                            </div>
                            <div class="sign-input-wrapper">
                                <h5>Adresse</h5>
                                <div class="sign-input">
                                    {{ form_widget(userform.adresseUser, { 'attr' : { 'placeholder' : 'Please enter a valid adresse' } }) }}<i class="fas fa-mobile-alt"></i>
                                    <i class="fa fa-map-marker"></i>
                                </div>
                            </div>

                            <div class="sign-input-wrapper">
                                <h5>Email</h5>
                                <div class="sign-input">
                                    {{ form_widget(userform.email, { 'attr' : { 'placeholder' : 'Please enter a valid email' } }) }}
                                    {{ form_errors(userform.email) }}
                                    <i class="fa fa-envelope"></i>
                                </div>
                            </div>

                            <div class="sign-input-wrapper">
                                <h5>Password</h5>
                                <div class="sign-input">
                                    {{ form_widget(userform.mdpUser, { 'attr' : { 'placeholder' : 'Please enter a valid password' } }) }}
                                    <i class="fa fa-lock"></i>
                                </div>
                            </div>




                            <div class="sign-input-wrapper">
                                <h5>Voiture</h5>
                                <div class="sign-input">
                                    {{ form_widget(userform.voiture, { 'attr' : { 'placeholder' : 'Please enter a valid voiture' } }) }}
                                    <i class="fa fa-car"></i>
                                </div>
                            </div>

                            <div class="sign-input-wrapper">
                                <h5>Image</h5>
                                <div class="sign-input">
                                    <div class="input-group">
                                        <div class="custom-file">
                                            {{ form_widget(userform.imageFile, { 'attr' : { 'class' : 'custom-file-input' } }) }}
                                            <label class="custom-file-label" for="publication_imageFile_file">Choose file</label>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <button type="submit" class="signup-btn w-100" name="register_form">Sign Up</button>

                            <div class="sign-new text-center">
                                <p>Already a member <a href="{{ path('app_login') }}">Login</a></p>
                            </div>

                            {{ form_end(userform) }}


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}