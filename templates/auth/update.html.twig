{% block body %}

     
                        {{ form_start(UpdateForm) }}
                            <div class="sign-input-wrapper">
                                <h5>CIN</h5>
                                <div class="sign-input">
                                    {{ form_widget(UpdateForm.cin, { 'attr' : { 'placeholder' : 'Please enter a valid cin' } }) }}
