                                <div class="sign-input">
                                    {{ form_widget(UpdateForm.image, { 'attr' : { 'placeholder' : 'Please enter a valid image' } }) }}
                                    <i class="far fa-clone"></i>
                                </div>
                            </div>



{% endblock %}