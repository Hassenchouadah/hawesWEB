{% extends 'baseFront.html.twig' %}


{% block body %}

<section id="breadcrumb" class="breadcrumb-section position-relative"
    data-background="{{asset('assets/uploads/2021/12/banner.jpg')}}"
    style="background-image: url('{{asset('assets/uploads/2021/12/banner.jpg')}}');">
    <span class="breadcrumb-overlay position-absolute"></span>
    <div class="container">
        <div class="breadcrumb-content text-center headline">
            <h2>Login</h2>
            <div class="breadcrumb-item ul-li">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>


                    <li class="breadcrumb-item active">Login</li>
                </ul>
            </div>
        </div>
    </div>
</section>


<section class="signup-area">
    <div class="container">
        <div class="row">
            <div class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-8 offset-lg-2">
                <div class="sign-wrapper white-bg">
                    <div class="sign-form">

                        <form method="post" action="#" class="login-form">
                            <div class="sign-input-wrapper">
                                <h5>Username</h5>
                                <div class="sign-input">
                                    <input type="text" name="login" placeholder="Please enter username">
                                    <i class="far fa-envelope"></i>
                                </div>
                            </div>
                            <div class="sign-input-wrapper">
                                <h5>Username</h5>
                                <div class="sign-input">
                                    <input type="password" id="password-field" name="password"
                                        placeholder="Please enter password">
                                    <i class="far fa-clone"></i>
                                </div>
                            </div>
                            <div class="sign-action d-sm-flex justify-content-between">
                                <div class="sign-agree d-flex align-items-center">
                                    <input type="checkbox" id="m-agree">
                                    <label for="m-agree" name="keep_signed">Keep me signed in</label>
                                </div>
                                <div class="sign-forgot">
                                    <a href="#">Forgot your password?</a>
                                </div>
                            </div>
                            <button class="signup-btn w-100" name="login_form"> <span></span> Sign In</button>
                            <div class="sign-new text-center">
                                <p>To become a member <a href="#">Sign Up</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}