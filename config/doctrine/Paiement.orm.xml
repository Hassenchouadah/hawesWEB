<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Paiement" table="paiement">
    <indexes>
      <index name="idRes" columns="idRes"/>
    </indexes>
    <id name="idpmt" type="integer" column="idPmt">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="datepmt" type="datetime" column="datePmt" nullable="false"/>
    <field name="methode" type="string" column="methode" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="montant" type="float" column="montant" precision="10" scale="0" nullable="false"/>
    <field name="canceled" type="integer" column="canceled" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <many-to-one field="idres" target-entity="Reservation" fetch="LAZY">
      <join-columns>
        <join-column name="idRes" referenced-column-name="idRes"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
