<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Reservation" table="reservation">
    <indexes>
      <index name="idHebr" columns="idHebr"/>
      <index name="idUser" columns="idUser"/>
    </indexes>
    <id name="idres" type="integer" column="idRes">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="idvol" type="integer" column="idVol" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="valide" type="integer" column="valide" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="nbpersonne" type="integer" column="nbPersonne" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="forfait" type="string" column="forfait" length="25" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nbchambre" type="integer" column="nbChambre" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="nbsuite" type="integer" column="nbSuite" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="datearr" type="date" column="dateArr" nullable="false"/>
    <field name="datedep" type="date" column="dateDep" nullable="false"/>
    <field name="dateres" type="datetime" column="dateRes" nullable="false">
      <options>
        <option name="default">current_timestamp()</option>
      </options>
    </field>
    <field name="deadlineannulation" type="datetime" column="deadlineAnnulation" nullable="false"/>
    <many-to-one field="idhebr" target-entity="Hebergement" fetch="LAZY">
      <join-columns>
        <join-column name="idHebr" referenced-column-name="id_hbg"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="iduser" target-entity="Utilisateurs" fetch="LAZY">
      <join-columns>
        <join-column name="idUser" referenced-column-name="idUser"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
