<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Reclamation" table="reclamation">
    <indexes>
      <index name="id_hbg" columns="id_hbg"/>
      <index name="idUser" columns="idUser"/>
    </indexes>
    <id name="idRec" type="integer" column="id_rec">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="descRec" type="string" column="desc_rec" length="3000" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="traite" type="integer" column="traite" nullable="false">
      <options>
        <option name="unsigned"/>
        <option name="default">0</option>
      </options>
    </field>
    <field name="dateajoutrec" type="datetime" column="dateAjoutrec" nullable="false">
      <options>
        <option name="default">current_timestamp()</option>
      </options>
    </field>
    <field name="datetraitrec" type="datetime" column="dateTraitrec" nullable="true">
      <options>
        <option name="default">current_timestamp()</option>
      </options>
    </field>
    <many-to-one field="idHbg" target-entity="Hebergement" fetch="LAZY">
      <join-columns>
        <join-column name="id_hbg" referenced-column-name="id_hbg"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="iduser" target-entity="Utilisateurs" fetch="LAZY">
      <join-columns>
        <join-column name="idUser" referenced-column-name="idUser"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
