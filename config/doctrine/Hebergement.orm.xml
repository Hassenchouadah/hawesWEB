<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Hebergement" table="hebergement">
    <id name="idHbg" type="integer" column="id_hbg">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="city" type="string" column="city" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="dateAjout" type="date" column="date_ajout" nullable="false"/>
    <field name="adress" type="string" column="adress" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nomHotel" type="string" column="nom_hotel" length="30" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="nbChambres" type="integer" column="nb_chambres" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="nbSuites" type="integer" column="nb_suites" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="piscine" type="integer" column="piscine" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="image" type="string" column="image" length="255" nullable="true">
      <options>
        <option name="fixed"/>
        <option name="default">NULL</option>
      </options>
    </field>
    <field name="prix" type="integer" column="prix" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
